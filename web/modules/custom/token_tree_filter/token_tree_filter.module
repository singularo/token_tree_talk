<?php

/**
 * Example usage for token_tree_filter
 */

declare(strict_types=1);

use Drupal\Core\Form\FormStateInterface;

function token_tree_filter_form_alter(&$form, FormStateInterface $form_state, $form_id): void {

  if (!in_array($form_id, ['node_page_form', 'node_page_edit_form'])) {
    return;
  }

  // Add token tree.
  $form['field_test']['token_help'] = [
    '#type' => 'container',
    '#weight' => 99,
    'token_link' => [
      '#token_types' => [
        'node%field_foo',
        'node%field_bar',
        'node!field_foo_bor',
      ],
      '#theme' => 'token_tree_link',
      '#show_restricted' => FALSE,
      '#show_nested' => FALSE,
      '#global_types' => FALSE,
      '#click_insert' => TRUE,
      '#recursion_limit' => 1,
      '#weight' => 90,
    ],
  ];
}
